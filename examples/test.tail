const fruits -> ["apple", "banana", "avocado", "durian", "tomato"]
const colors -> ["red", "yellow", "green", "brown", "red"]

const pairs -> record (zip fruits (map colors !c -> {
  color: c,
  is_red: (eq c "red")
}))

join (map pairs !name info ->
  case info @ "is_red" of
    true  => $"{{name}}s are cool as fuck!"
    false => $"{{name}}s are not cool, they are {{info @ "color"}}!"
) "\n"
